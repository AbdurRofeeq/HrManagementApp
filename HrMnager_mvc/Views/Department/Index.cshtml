@model List<HrMnager_mvc.Models.ResponseModel.DepartmentResponse>
@{
    ViewData["Title"] = "Department";
}

<h1>Departments</h1>
<a class="btn btn-primary" href="/Department/Create">Create New Department</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <a class="btn btn-info" href="/Department/Details/@department.Id">Details</a>
                    <a class="btn btn-warning" href="/Department/Edit/@department.Id">Edit</a>
                    <form action="/Department/Delete/@department.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


