
@model HrMnager_mvc.Models.ResponseModel.DepartmentDetailResponse
@{
    ViewData["Title"] = "Delete Department";
}
<h1>Delete Department</h1>
<h3>Are you sure you want to delete this department?</h3>
<p><strong>Name:</strong> @Model.Name</p>
<p><strong>HR Manager:</strong> @Model.HrManager.FullName</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
