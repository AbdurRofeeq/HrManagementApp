
@model IEnumerable<HrMnager_mvc.Models.ResponseModel.EmployeeResponse>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<a class="btn btn-primary" href="/Employee/Create">Create New Employee</a>
<table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@(employee.Id)</td>
                    <td>@employee.FullName</td>
                     <td>@employee.DepartmentName</td>
                    <td>
                        <a class="btn btn-info" href="/Employee/Details/@(employee.Id)">Details</a>
                        <a class="btn btn-warning" href="/Employee/Edit/@(employee.Id)">Edit</a>
                        <form action="/Employee/Delete/@employee.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
</table>
